<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <!--<include android:id="@+id/app_bar" layout="@layout/app_bar"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/cardview_default_elevation"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/title_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="@dimen/abc_action_bar_content_inset_material"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/title_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:inputType="textAutoCorrect"
                android:contentDescription="Enter title for your reminder"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--  <RadioGroup
                      android:id="@+id/radioGenSpec"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <RadioButton
                          android:id="@+id/general"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="General"
                          android:checked="true" />
                      <RadioButton
                          android:id="@+id/specific"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Specific" />
                  </RadioGroup>-->

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <TextView
                android:id="@+id/place_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="12dp"
                android:layout_marginTop="12dp"
                android:text="Radius"
                android:textColor="#000"
                android:textSize="@dimen/abc_action_bar_content_inset_material"
                android:textStyle="bold"
                android:visibility="visible" />

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="3"
                android:thumb="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/datetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="12dp"
                android:layout_marginTop="12dp"
                android:text="Date"
                android:textColor="#000"
                android:textSize="@dimen/abc_action_bar_content_inset_material"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:inputType="textAutoCorrect"
                android:focusable="false"
                android:clickable="true"
                android:editable="false"/>

            <TextView
                android:id="@+id/place_address_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="12dp"
                android:layout_marginTop="12dp"
                android:text="Task To Remind"
                android:textColor="#000"
                android:textSize="@dimen/abc_action_bar_content_inset_material"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/todo_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:enabled="true"
                android:inputType="textAutoCorrect"
                android:textSize="20sp"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:text="Save"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/cancel_button"
                android:layout_toEndOf="@+id/cancel_button"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/save_button"
                android:layout_alignBottom="@+id/save_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="53dp"
                android:layout_marginStart="53dp"
                android:text="Cancel" />



        </RelativeLayout>
        >
    </LinearLayout>

</ScrollView>
