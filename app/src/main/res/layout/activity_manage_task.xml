<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ericabraham.leapfrog.ManageTask">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_layout"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <!--<include android:id="@+id/app_bar" layout="@layout/app_bar"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/cardview_default_elevation"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:id="@+id/title_textview"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:layout_margin="12dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_action_bar_content_inset_material"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/title_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:inputType="textAutoCorrect"
                    android:contentDescription="Enter title for your reminder"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--  <RadioGroup
                          android:id="@+id/radioGenSpec"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content">
                          <RadioButton
                              android:id="@+id/general"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="General"
                              android:checked="true" />
                          <RadioButton
                              android:id="@+id/specific"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Specific" />
                      </RadioGroup>-->

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>

                <TextView
                    android:id="@+id/place_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Radius"
                    android:textColor="#000"
                    android:textSize="@dimen/abc_action_bar_content_inset_material"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <SeekBar
                    android:id="@+id/seekBar"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="3"
                    android:thumb="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/datetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Date"
                    android:textColor="#000"
                    android:textSize="@dimen/abc_action_bar_content_inset_material"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:inputType="textAutoCorrect"
                    android:focusable="false"
                    android:clickable="true"
                    android:editable="false"/>

                <TextView
                    android:id="@+id/place_address_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Task To Remind"
                    android:textColor="#000"
                    android:textSize="@dimen/abc_action_bar_content_inset_material"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/todo_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:enabled="true"
                    android:inputType="textAutoCorrect"
                    android:textSize="20sp"
                    android:visibility="visible" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:padding="15dp">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

                <Button
                    android:id="@+id/del_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp"
                    android:text="Delete" />

                <Button
                    android:id="@+id/update_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/taskid"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Update" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Task ID:" />

                <TextView
                    android:id="@+id/taskid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_toRightOf="@+id/textView2"
                    android:text="ID" />


            </RelativeLayout>
            >
        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
